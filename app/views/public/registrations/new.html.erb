<div class="container">
  <div class="row">
    <div class="mx-auto col-11 col-sm-10 col-lg-8 col-xl-4">
    <h2>新規登録</h2>
    <br>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  　  <%= render "public/shared/error_messages", resource: resource %>

      <table>
        <tbody>
          <tr>
            <div class="field">
            <td><%= f.label :name %></td>
            <td><%= f.text_field :name %></td>
            </div>
          </tr>

          <tr>
            <div class="field">
            <td> <%= f.label :email %></td>
            <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
            </div>
          </tr>

          <tr>
            <% if devise_mapping.rememberable? %>
            <div class="field">
            <td><%= f.check_box :remember_me %></td>
            <td><%= f.label :remember_me %></td>
           </div>
           <% end %>
          </tr>

          <tr>
            <div class="field">
          　<td><%= f.label :password %></td>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %>
            <td><%= f.password_field :password, autocomplete: "new-password" %></td>
            </div>
          </tr>

          <tr>
            <div class="field">
            <td><%= f.label :password_confirmation %></td>
            <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
            </div>
          </tr>

          <tr>
            <div class="actions">
              <td></td>
              <td><%= f.submit '新規登録',class:"btn btn-success" %></td>
            </div>
          </tr>
        </tbody>
      </table>

    <% end %>

    </div>
  </div>
</div>