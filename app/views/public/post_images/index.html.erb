<div class="container">
  <br>
  <br>
  <br>

  <div class="row">

    <div class="col-lg-4">
      <table class="table table-bordered">
        <tbody>
          <tr>
            <th>ジャンル検索</th>
          </tr>
          <%# @genres.each do |genre| %>
          <tr>
            <td><%#= genre.name %></td>
          </tr>
          <%# end %>
        </tbody>
      </table>
    </div>

    <div class="col-lg-12">
      <h2><b>コミック一覧</b></h2>
      <div class="row">
        <% @post_images.each do |post_image| %>
          <div class="mr-3">
            <%= link_to post_image_path(post_image.id) do %>
            <%= image_tag post_image.get_image, size:"120x150" %>
            <% end %>
            <p></p>
            <p><%= image_tag post_image.user.get_default_profile_image, size:"80x70", class:"rounded-circle";  %></p>
            <p>タイトル：<%= post_image.comic_name %></p>
            <p>説明：<%= post_image.caption %></p>
            <p>ユーザーネーム：<%= post_image.user.name %></p>
            <p><%= link_to "#{post_image.post_comments.count} コメント", post_image_path(post_image.id) %></p>
          </div>
        <% end %>
      </div>
    </div>

    <div class="col-mr-auto">
     <%= paginate @post_images %>
    </div>

  </div>
</div>