<div class="container">

  <h1>ジャンル一覧・追加</h1>
  <% if @genre.errors.any? %>
    　<%= @genre.errors.count %>errors prohibited this obj from being saved:
      <ul>
      <% @genre.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
      </ul>
    <% end %>
  <br>
        <%= form_with model: @genre, url: admin_genres_path do |f| %>
        <div class="row">
          <div class="col-lg-2">ジャンル名</div>
          <div class="col-lg-3"><%= f.text_field :name %></div>
          <div class="col-lg-2"><%= f.submit '新規登録', class: "btn btn-success" %></div>
        </div>
        <% end %>
        <br>

       <tbody>
        <div class="row">
        <table class="table col-lg-4">
        <tr>
          <th>ジャンル</th>
        </tr>
          <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success", method: :get %></td>
          </tr>
          <% end %>
         </div>
      </tbody>
    </table>
</div>